@model dynamic

@{
    ViewBag.Title = "Menu Principal";
}
<div id="homeCarousel" class="carousel slide carouselCustomHeight" data-ride="carousel">
    <div class="carousel-inner carouselCustomHeight">
        @{int i = 0;}
        @foreach (var item in Model.Alumnos)
        {
            if (i == 0)
            {
                <div class="carousel-item active">
                    <img src="/Content/Images/@item.Foto" class="carouselCustomHeight w-100 img-fluid">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@item.NombreCompleto</h5>
                        <p>Viene de: @item.Procedencia</p>
                    </div>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img src="/Content/Images/@item.Foto" class="carouselCustomHeight w-100 img-fluid">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@item.NombreCompleto</h5>
                        <p>Viene de: @item.Procedencia</p>
                    </div>
                </div>
            }
            {i++;}
        }
    </div>
    <a class="carousel-control-prev" href="#homeCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#homeCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row pt-4">
    <div class="col-md-3">
        <div class="card">
            <h5 class="card-header">Cursos <span class="badge badge-warning">@Model.Registros[0]</span></h5>
            <div class="card-body">
                <p class="card-text">
                    Registro de Cursos para estudiantes.
                </p>
                <a href="@Url.Action("Index", "Curso")" class="btn btn-primary">Ver más</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <h5 class="card-header">Tutores <span class="badge badge-warning">@Model.Registros[1]</span></h5>
            <div class="card-body">
                <p class="card-text">
                    Registro de Padres de Familia de los estudiantes.
                </p>
                <a href="@Url.Action("Index", "Tutor")" class="btn btn-primary">Ver más</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <h5 class="card-header">Inscripciones <span class="badge badge-warning">@Model.Registros[2]</span></h5>
            <div class="card-body">
                <p class="card-text">
                    Modulo de Registro de Alumnos.
                </p>
                <a href="@Url.Action("Index", "Registro")" class="btn btn-primary">Ver más</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <h5 class="card-header">Alumnos <span class="badge badge-warning">@Model.Registros[3]</span></h5>
            <div class="card-body">
                <p class="card-text">
                    Registro de Alumnos al Sistema.
                </p>
                <a href="@Url.Action("Index", "Alumno")" class="btn btn-primary">Ver más</a>
            </div>
        </div>
    </div>
</div>