@model AppRegistroEstudiantes.Models.Tutor

@{
    ViewBag.Title = "Tutor - Eliminar";
}

<div>
    <h4>¿Estas seguro que quieres eliminar el Tutor con Id @Model.Id?</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label class="h6">Nombre Completo</label>
                <div>
                    @Html.DisplayFor(model => model.NombreCompleto)
                </div>
            </div>
        </div>
        <div class="col-md-1">
            <div class="form-group">
                <label class="h6">@Html.DisplayNameFor(model => model.Ocupacion)</label>
                <div>@Html.DisplayFor(model => model.Ocupacion)</div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Volver Atrás", "Index") |
            <input id="btnEliminar" type="submit" value="Eliminar" class="btn btn-danger" />
        </div>
    }
</div>
